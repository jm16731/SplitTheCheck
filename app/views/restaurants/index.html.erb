<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<%= render 'search' %>
<%= link_to 'Clear', clear_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Will split</th>
      <th>Wont split</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= restaurant.name %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.will_split %></td>
        <td><%= restaurant.wont_split %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Thumbs Up',
          thumbs_up_path(:id => restaurant.id), :method => :patch %></td>
        <td><%= link_to 'Thumbs Down',
          thumbs_down_path(:id => restaurant.id), :method => :patch %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %>

<%= link_to 'First', first_path %>
<%= link_to 'Previous 10', prev_10_path %>
<%= link_to 'Next 10', next_10_path %>
<%= link_to 'Last', last_path %>
