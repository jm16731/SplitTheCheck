<%# view search by https://medium.com/@rrrachelrath/beginners-guide-to-making-a-ruby-on-rails-search-bar-9e94a9b161d9 %>
<%= form_tag "/search", method: "GET" do %>
  <%= label_tag :search_by_name %>
  <%= text_field_tag :search_by_name, params[:search_by_name] %>

  <%= label_tag :search_by_location %>
  <%= text_field_tag :search_by_location, params[:search_by_location] %>

  <%= submit_tag "Search" %>
<% end %>
